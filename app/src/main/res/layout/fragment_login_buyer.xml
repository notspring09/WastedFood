<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentBuyer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/gradient_seller_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:contentDescription="AppAvatar"
                android:layout_marginTop="50dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:src="@drawable/logo2"
                />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnGoogleSignInFLB"
            style="@style/com_facebook_button_like"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:paddingEnd="40dp"
            android:background="#f00"
            android:drawableStart="@drawable/googleplus3"
            android:text="Continue with Google"
            android:textColor="#FDF8F8" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnFacebookSignInFLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnBuyerOptionFLB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mua hàng"
            android:textColor="@color/colorWhite"
            android:background="@drawable/item_background"/>

        <Button
            android:id="@+id/btnPartnerOptionFLB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/lightBlue"
            android:text="Bán Hàng"
            android:background="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>